# Variables d'environnement pour l'application Prix Carburants
# Copiez ce fichier en .env et modifiez les valeurs selon vos besoins

# Environnement de l'application
FLASK_ENV=production

# Clé secrète (OBLIGATOIRE en production - générez une clé unique!)
SECRET_KEY=your-very-secret-key-here-change-this-in-production

# Configuration du serveur
HOST=0.0.0.0
PORT=5000

# Configuration des logs
LOG_LEVEL=INFO

# Configuration de l'application
DATA_REFRESH_INTERVAL_HOURS=1
REQUEST_TIMEOUT_SECONDS=60
MAX_RETRIES=3

# Configuration du cache
CACHE_TTL_MINUTES=30

# Pour Docker
COMPOSE_PROJECT_NAME=prix-carburants